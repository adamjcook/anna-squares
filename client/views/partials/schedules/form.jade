include _heading.jade
.row
  .col-lg-4
    label Schedule Date
    .input-group
      input.form-control(
      type="text",
      ng-disabled="true",
      asc-datepicker-popup="fullDate",
      show-weeks="false",
      ng-model="scheduleDate",
      is-open="calendarOpened",
      datepicker-options="datePickerOptions",
      ng-required="true",
      close-text="Close")
      .input-group-btn
        button.btn.calendar-btn(ng-click="openCalendar()")
          i.fa.fa-calendar
  .col-lg-4
    label Start Time
    .input-group
      input.form-control(
      type="text",
      ng-disabled="true",
      asc-timepicker-popup="shortTime",
      ng-model="startTime",
      ng-change="changeStartTime()",
      is-open="timeOpened",
      timepicker-options="timePickerOptions",
      ng-required="true")
      .input-group-btn
        button.btn.time-btn(ng-click="openTime()")
          i.fa.fa-clock-o
